/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.round-click{
    height: 120rpx;
    width: 120rpx;
    background-color: #0997DC;
    border-radius: 100%;
    position: fixed;
    bottom: 80rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click view{
    font-size: 28rpx;
    max-width: 100rpx;
    color: #fff;
    text-align: center;
}
.image {
  width: 500rpx;
  height: 800rpx;
  margin-left: 40rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.u-wrp-bnr {
  width: 100%;
  height: 300rpx;
  display: block;
  bottom: 30rpx;
  position: relative;
  background: #f0f0f0;
}
.u-img-slide {
  width: 100%;
  height: inherit;
}
